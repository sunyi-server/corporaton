<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">
<struts>

	<package name="default" namespace="/" extends="struts-default">
	<!-- 定义新的拦截器栈, 配置 prepare 拦截器栈的 alwaysInvokePrepare 参数值为 false -->
		<interceptors>
			<interceptor-stack name="sshStack">
				<interceptor-ref name="paramsPrepareParamsStack">
					<param name="prepare.alwaysInvokePrepare">false</param>
				</interceptor-ref>
			</interceptor-stack>
		</interceptors> 
		<!-- 使用新的拦截器栈 -->
	    <default-interceptor-ref name="sshStack"></default-interceptor-ref>
	
		 <action name="user_*" class="userInfoAction"
        	method="{1}">
        	<!-- 分页显示 -->
        	<result name="page_list_userInfo">/WEB-INF/views/user/BackStage.jsp</result>
        	<result name="delete" type="redirect">/user_page_list_userInfo</result>
        	
        	<!-- 登录 -->
        	<result name="success">/index.jsp</result>
        	<result name="ordinaryuser">
        	    /index.jsp
        	</result>
        	<result name="superuser">
        	   /WEB-INF/views/corInfo/navbar.jsp
        	</result>
        	<result name="fail">/login.jsp</result>
        	<!-- 登录注册用户 -->
        	<result name="registration">/login.jsp</result>
        	<!--根据用户名查询 -->
        	<result name="listone">/WEB-INF/views/user/list_byid.jsp</result>
        	
        	
        </action>
	</package>


</struts>
